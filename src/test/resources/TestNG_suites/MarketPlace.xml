<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Everyday Testing" verbose="2" preserve-order="true"
	parallel="false">
	<!-- Listener to validate it test case fail and take screenshot -->
	<listeners>
		<listener class-name="com.pentaho.selenium.listener.ScreenshotListener" />
	</listeners>

	<test verbose="1" name="Tests regarding Marketplace">
		<classes>
			<class name="com.pentaho.ctools.main.LoginPentaho" />
			<class name="com.pentaho.ctools.marketplace.MarketPlacePage" />
			<class name="com.pentaho.ctools.marketplace.PluginsList" />
			<class name="com.pentaho.ctools.marketplace.MarketplaceFilters" />
			<class name="com.pentaho.ctools.marketplace.InstalledTab" />
			<class name="com.pentaho.ctools.marketplace.PluginDetailsPopup" />
			<class name="com.pentaho.ctools.marketplace.InstallUninstall" />
			<class name="com.pentaho.ctools.main.LogoutPentaho" />
		</classes>
	</test>

</suite>